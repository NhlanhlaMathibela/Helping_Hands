@model HelpingHands.Models.UserModel

@{
    ViewData["Title"] = "AddUsers";
    Layout = "~/Views/Shared/_Dashboards.cshtml";
}




<head>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">


   

</head>
<body>

<div class='dashboard-app'>
    <header class='dashboard-toolbar'>
        <a href="#!" class="menu-toggle"><i class="fas fa-bars"></i></a>
    </header>
    <div class='dashboard-content'>
        <div class='container'>
<h3>Add New Employee</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUsers">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model=> model.UserId)
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserType">Type of Employee:</label>
                <select asp-for="UserType" asp-items="@(new SelectList(new List<string>(){ "N", "O" }))" class="form-control custom-dropdown">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
     
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>


                </div>


        
</div>
</div>
</div>
@{
                    if (TempData["SuccessMessage"] != null)
                    {
                        <script type="text/javascript">
                            Swal.fire({
                                title: 'Success!',
                                text: '@TempData["SuccessMessage"].ToString()',
                                icon: 'success',
                                confirmButtonText: 'OK'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "@Url.Action("ViewNurses", "Admin")";
                                }
                            });
                        </script>
                    }
                }
</body>



  




