@model HelpingHands.Models.City

@{
    ViewData["Title"] = "AddCities";
}



<h2>Add New City</h2>

@using (Html.BeginForm("Create", "AddCities", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.CityName, "City Name")
        @Html.TextBoxFor(model => model.CityName, new { @class = "form-control", placeholder = "Enter City Name" })
        @*@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })*@
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Abbrev, "Abbreviation")
        @Html.TextBoxFor(model => model.Abbrev, new { @class = "form-control", placeholder = "Enter Abbreviation" })
   @*     @Html.ValidationMessageFor(model => model.Abbreviation, "", new { @class = "text-danger" })*@
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}

