@model HelpingHands.Models.UserModel

@{
    ViewData["Title"] = "RegisterPatients";
    Layout = "~/Views/Shared/_Register.cshtml";
}
<head>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</head>
<body>
    <div class="container">
        <h2>Register</h2>
        <form id="registerPatients" asp-action="RegisterPatients" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="Username">Username<span class="required"> *</span></label>
                <input asp-for="Username" type="text" id="Username" name="Username" required>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="EmailAddress">Email Address<span class="required"> *</span></label>
                <input asp-for="EmailAddress" type="email" id="EmailAddress" name="EmailAddress" required>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password">Password<span class="required"> *</span></label>
                <input asp-for="Password" type="password" id="password" name="password" required>
                <span toggle="#password" class="eye toggle-password">👁</span>

            </div>
            <div class="form-group">
                <label for="password">Confirm Password<span class="required"> *</span></label>
                <input asp-for="ConfirmPassword" type="password" id="ConfirmPassword" name="ConfirmPassword" required>
                <span toggle="#ConfirmPassword" class="eye toggle-password">👁</span>
                
            </div>


            <div class="form-group">
                <label for="ContactNumber">Phone Number<span class="required">  *</span></label>
                <input asp-for="ContactNumber" type="tel" id="ContactNumber" name="ContactNumber" required>
            </div>
            <div class="form-group">
                <label <span class="required">* </span>required</label>
            </div>
            <button type="submit" class="submit-button">Register</button>
        </form>
    </div>
    @{
        if (TempData["SuccessMessage"] != null)
        {
            <script type="text/javascript">
                Swal.fire({
                    title: 'Success!',
                    text: '@TempData["SuccessMessage"].ToString()',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = "@Url.Action("Login", "User")";
                    }
                });
            </script>
        }
    }
</body>

<script>
    $(".toggle-password").click(function () {
        $(this).toggleClass("fa-eye fa-eye-slash"); // toggle our eye icon
        var input = $($(this).attr("toggle"));
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
        }
    });

</script>








