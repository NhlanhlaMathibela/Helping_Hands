@model HelpingHands.Models.UserModel

@{
    ViewData["Title"] = "AddUsers";
    Layout = "~/Views/Shared/_Dashboards.cshtml";
}


<style>
    .row{
        display:block;
        padding:40px 40px 100px 40px;


    }
    .form-group{

        align-items:center;
        margin-bottom:12px;

    }
    h3{
         
    }
    back-button{
        border-radius:50%;
        background-color:green;
        color:#fff;
        text-align:center;
    }

</style>

<h3>Add New User</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUsers">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model=> model.UserId)
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserType">Gender:</label>
                <select asp-for="UserType" asp-items="@(new SelectList(new List<string>(){ "N", "O" }))" class="form-control custom-dropdown">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>
     
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <button class="back-button">
        <a asp-action="Index">Back to List</a>
    </button>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
