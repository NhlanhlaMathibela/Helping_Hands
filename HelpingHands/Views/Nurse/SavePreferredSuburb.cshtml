@model HelpingHands.Models.PreferredSuburb
@{
    ViewData["Title"] = "AddPreferredSub";
    Layout = "~/Views/Shared/_Nurse.cshtml";
   
}
<head>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" integrity="sha256-2XFplPlrFClt0bIdPgpz8H7ojnk10H69xRqd9+uTShA=" crossorigin="anonymous" />

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<div class='dashboard-app'>
    <header class='dashboard-toolbar'>
        <a href="#!" class="menu-toggle"><i class="fas fa-bars"></i></a>
    </header>
    <div class='dashboard-content'>
        <div class='container'>

<h1>Add your preferred Sub</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="NurseSuburbs" method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-goup">
                <label asp-for="PreferredSub">Choose Suburb</label>
                <select asp-for="PreferredSub" class="form-control w-100">
                    <option value="" selected>--Select Suburb--</option>
                    @foreach (var suburb in ViewBag.SuburbList)
                    {
                        <option value="@suburb.SuburbId">@suburb.SuburbName</option>
                    }
                </select>
               
            </div>
            <input type="submit" value="Save">
</form>

                    <p>
                        <a asp-action="GetPreferredSuburbs" class="btn btn-primary">View My Preferred Suburbs</a>
                    </p>
</div>
</div>
</div>
</div>
</div>
